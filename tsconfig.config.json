{
  "compilerOptions": {
    "composite": true,
    "module": "esnext",
    "moduleResolution": "node"
  },
  "exclude": ["node_modules","public"],
  "include": [
    "vite.config.ts",
    "config/**/*.ts",
    "config/**/*.d.ts",
    "*.d.ts",
    "types/**/*.d.ts",
    "types/**/*.ts",
    "tests/**/*.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
  ]
}
